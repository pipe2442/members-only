<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="section">
    <div class="container">
        <div class="field is-grouped">
            <% if user_signed_in? %>
                <p>
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-light" %>
                </p>
                <p class="control">
                    <%= link_to 'Edit Profile', edit_user_registration_path, class:"button is-light" %>
                </p>
            <% else %>
                <p class="control">
                    <%= link_to "Sign In", new_user_session_path, class:"button is-light" %>
                </p>
                <p class="control">
                    <%= link_to "Sign Up", new_user_registration_path, class:"button is-light" %>
                </p>
            <% end %>
        </div>
    </div>
</div>


    <div class="section">
      <div class="container">
        <div class="notification is-primary is-light">
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
