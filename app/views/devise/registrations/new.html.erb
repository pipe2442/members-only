<div class="columns is-half is-centered">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Sign up</h2> <br/>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="field">
        <div class="control">
          <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label_html: { class: "label" },
                    wrapper: false,
                    input_html: { autocomplete: "email", class: "input" }%>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :name,
                  required: true,
                  label_html: { class: "label" },
                  autofocus: true,
                  wrapper: false,
                  input_html: { autocomplete: "name", class: "input" }%>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :password,
                  required: true,
                  label_html: { class: "label" },
                  wrapper: false,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "input" } %>
        </div>
      </div>
      <div class="field">
        <div class="control"> 
          <%= f.input :password_confirmation,
                  required: true,
                  label_html: { class: "label" },
                  wrapper: false,
                  input_html: { autocomplete: "new-password", class: "input" } %>
        </div>
      </div><br/>
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class:"button is-info is-medium" %>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>


</div>